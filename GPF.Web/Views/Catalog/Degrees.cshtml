@model GPF.Web.ViewModels.DegreeListViewModel
@{
    ViewBag.Title = "Degree Catalog";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">Degrees</div>
    <div class="panel-body">
        <div class="panel-group">
            @foreach (var degree in Model.Degrees)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#degree-@degree.Id">@degree.Title</a>
                        </h4>
                    </div>
                    <div id="degree-@degree.Id" class="panel-collapse collapse">
                        <div class="panel-body">
                            <p>@degree.Description</p>
                            <div class="panel panel-default">
                                <div class="panel-heading">Concentrations:</div>
                                <div class="list-group">
                                    @foreach (var concentration in degree.Concentrations)
                                    {
                                        <a href="#" class="list-group-item">
                                            @concentration.Title
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
