@model GPF.Web.ViewModels.CourseListViewModel
@{
    ViewBag.Title = "Course Catalog";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">Courses</div>
    <div class="panel-body">
        <div class="panel-group">
            @foreach (var course in Model.Courses)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#course-@course.Id">@course.Title</a>
                        </h4>
                    </div>
                    <div id="course-@course.Id" class="panel-collapse collapse">
                        <div class="panel-body">
                            <p>@course.Description</p>
                            <div class="panel panel-default">
                                <div class="panel-heading">Prerequisites:</div>
                                <div class="list-group">
                                    @foreach (var prereq in course.Prerequisites)
                                    {
                                        <a href="#" class="list-group-item">
                                            @prereq.Title
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>